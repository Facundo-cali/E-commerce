<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head', {title: 'Formulario de creación'}) %>
<body>
	<!-- Header -->
	<%- include('partials/header') %>
	<!-- /Header -->

	<div class="main__login">
		<div class="">
			<div class="">
				<h2 class="">Formulario de creación de productos</h2>
			</div>
		</div>
		<div class="">
			<form class="form__login" action="/products/store" method="post" enctype="multipart/form-data">
				<div class="">
					<div class="">

						<% if(typeof errors != "undefined"){ %>
							<% errors.forEach(error => { %>
								<p><%= error.msg %> </p>
							<% }) %>
						<% } %> 

						<label for="name" class="">Nombre del producto:</label>
						<input type="text" id="name" name="name" class="form__completar" placeholder="Ej: Zapatillas air-max" value="<%= typeof old != 'undefined' ? old.name : "" %>">
					</div>
					<div class="">
						<label for="price" class="">Precio del producto:</label>
						<input type="text" id="price" name="price" class="form__completar" placeholder="Ej: 10678" value="<%= typeof old != 'undefined' ? old.price : "" %>">
					</div>
					<div class="">
						<label for="discount" class="">Descuento:</label>
						<input type="text" id="discount" name="discount" class="form__completar" placeholder="Ej: 15" value="<%= typeof old != 'undefined' ? old.discount : "" %>">
					</div>
					<div class="">
						<label for="category" class="">Categoría:</label>
						<select name="category" id="category" class="form__completar">
							<option value="">Elegí</option>
							<option value="in-sale">En oferta</option>
							<option value="visited">Últimos agregados</option>
						</select>
					</div>
					<div class="">
						<label for="description" class="">Descipción:</label>
						<textarea name="description" id="description" class="form__completar" value="<%= typeof old != 'undefined' ? old.description : "" %>"></textarea>
					</div>
					<div class="">
						<label for="" class="">Selecciona una imagen:</label>
						<input class="form__completar" type="file" name="image">
					</div>
					<div class="">
						<button type="submit" class="form__button">Guardar producto</button>
					</div>
				</div>
			</form>
		</div>
	</div>
	<!-- /todos los productos -->

	<!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->
</body>	
</html>